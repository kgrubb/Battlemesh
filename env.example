# BattleMesh Server Configuration
# Copy this file to .env and customize as needed

# State Management
LOAD_PREVIOUS_STATE=true # Load previous game state on startup (default: true)
STATE_FILE_PATH=.battlemesh-state.json # Path to state file (default: .battlemesh-state.json)

# Game Configuration

# Teams Configuration (JSON array)
DEFAULT_TEAMS='[{"id":1,"name":"Red Team","color":"#ef4444"},{"id":2,"name":"Blue Team","color":"#3b82f6"}]'

# Scoring Configuration
POINTS_PER_CAPTURE=10 # Points awarded per capture (default: 10)
POINTS_PER_SECOND=1 # Points per second while controlling (default: 1)

# Timing Configuration
GPS_UPDATE_FREQUENCY=1000 # GPS update frequency in ms (default: 1000)
CAPTURE_COOLDOWN=1000 # Minimum time between captures in ms (default: 1000)

# Reconnection Configuration
RECONNECT_DELAY_BASE=1000 # Base reconnection delay in ms (default: 1000)
RECONNECT_DELAY_MAX=30000 # Maximum reconnection delay in ms (default: 30000)
