{
  "name": "battlemesh",
  "version": "2.0.0",
  "description": "A real-time capture point system for airsoft, paintball, and nerf games with GPS tracking and live tactical maps",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "server": "node .output/server/index.mjs --host 0.0.0.0",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --reporter=list --headed",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "leaflet": "^1.9.4",
    "nuxt": "^4.1.3",
    "vue": "^3.5.22",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/test-utils": "^3.19.2",
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.38.0",
    "happy-dom": "^18.0.1",
    "vitest": "^3.2.4"
  }
}
